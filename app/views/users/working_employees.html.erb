<% provide(:title, "working_employees") %>
<h1>出勤中社員一覧</h1>

<div>
  <table class="table table-bordered table-condensed" id="table-working_employees">
    <tr>
      <th>社員番号</th>
      <th>名前</th>
    </tr>
    
    <% @users.each do |user| %>
      <% user.attendances.each do |attendance| %>
        <% if Date.current == attendance.worked_on && attendance.started_at != nil && attendance.finished_at == nil %>
          <tr>
            <td><%= user.employee_number %></td>
            <td><%= user.name %></td>
          </tr>
        <% end %>
      <% end %>
    <% end %>
  </table>
</div>