<% provide(:title, 'All Users') %>
<% provide(:class_text, 'signup') %>
<% provide(:button_text, '新規作成' ) %>
<h1>ユーザー一覧</h1>
<div class="col-md-10 col-md-offset-1 ">
	<table class="table table-condensed table-hover" id="table-users">
    <tr>   <%# CSVインポート　<div class="import">%>
      <%= form_tag(import_csv_path, data: {"turbolinks" => false}, :method => :post, multipart: true, class: "col-lg-4" ) do %>
        <%= file_field_tag(:file) %>
        <%= submit_tag "CSVインポート", class: "btn btn-primary btn-sm" %>
    	<% end %>
		</tr>
		<% @users.each do |user| %>
  		<tr>
        <td><%= link_to user.name, user %></td>
    	</tr>
      <% if current_user.admin? && !current_user?(user) %>
				<tr>
					<td>|
						<%= link_to "削除", user, method: :delete,
						data: { confirm: "削除してよろしいですか？" },
						class: "btn btn-primary" %>
					</td>
				</tr>
				<tr>
					<td>
						<div class="panel panel-default">
							<div class="panel-heading">
								<h4>
									<button type="button" data-toggle="collapse" data-target="#collapse<%= user.id %>" class="btn btn-lg btn-primary">編集</button>
								</h4>
							</div>
							<div id="collapse<%= user.id %>" class="panel-collapse collapse">
								<div class="panel-body">
									<%= render 'form2', user: user %>
								</div>
							</div>
						</div>
					</td>
				</tr>
			<% end %>
		<% end %>
  </table>
</div>




<div class="pull-right">
    <!--<div class="col-md-4 col-md-offset-8">-->
    <h4>ユーザー検索</h4>
    <%= form_tag(users_path, :method => 'get' ) do %>
    <%= text_field_tag :search %>
    <%= submit_tag '検索', :name => nil %>
    <%#= form_with url: User.new, method: :get, local: true do |f| %>
    <%#= label_tag %><%#= f.text_field :name %>
    <%#= f.submit :search, value:"検索", class: "btn btn-primary" %>
    <% end %>
    <!--</div>-->
</div>

