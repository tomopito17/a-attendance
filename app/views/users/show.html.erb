<div>
  <table class="table table-bordered table-condensed table-hover table-striped" id="table-attendances">
    <thead>
        <tr><%#colspan="1" 縦結合%>
          <th rowspan="3">残業申請</th>
          <th rowspan="3">日付</th>
          <th rowspan="3">曜日</th>
          <th colspan="8">［実績］</th>
          <th colspan="5">所定外勤務</th>
        </tr>
          <th colspan="3">出社</th>
          <th colspan="3">退社</th>
          <th rowspan="2">在社時間</th>
          <th rowspan="2">備考</th>
          <th colspan="2">終了予定時間</th>
          <th rowspan="2">時間外時間</th>
          <th rowspan="2">業務処理内容</th>
          <th rowspan="2">指示者確認㊞</th>
        </tr>
        <tr>
          <th>時</th>
          <th>分</th>
          <th></th>
          <th>時</th>
          <th>分</th>
          <th></th>
          <th>時</th>
          <th>分</th>
          <!-- <th>勤怠</th>
          <th>残業</th> -->
        </tr>
    </thead>

    <tbody>
      <% @attendances.each do |day| %> <%#10.4 (@first_day..@last_day).each do%>
        <%
          css_class =
          case $days_of_the_week[day.worked_on.wday]
          when '土' then
            'text-primary'
          when '日' then
            'text-danger'
          end
        %>

       <tr>
        <!-- 残業申請ボタン押下　モーダルへ飛ぶ-->
         <td class="table-body">
           <%= link_to "残業申請", overwork_form_user_attendance_path(@user, day), remote: true, :style=>"color:white;", class: "btn btn-sm btn-primary" %>
         </td><!-- カレンダー　日にち-->
         <td><%= l(day.worked_on, format: :short) %></td>
         <td class="<%= css_class %>"><%= $days_of_the_week[day.worked_on.wday] %></td>
         <td><%= format_hour(day.started_at) if day.started_at.present? %></td>
         <td><%= format_min(day.started_at) if day.started_at.present? %></td>
         <td>
           <% if btn_text = attendance_state(day) %>
           <%= link_to "#{btn_text}登録", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
           <% end %>
          </td>
          <!--旧退勤登録
          <td><%= format_hour(day.finished_at) if day.finished_at.present? %></td>
          <td><%= format_min(day.finished_at) if day.finished_at.present? %></td>
          --> <!--退社　-->
          <td><%= l(day.finished_at, format: :hour_only) if day.finished_at.present? %></td>
          <td><%= l(day.finished_at, format: :minutes_only) if day.finished_at.present? %></td>
          <td></td>

          <!-- 旧　在社時間-->
              <!--   
              < % if day.started_at.present? && day.finished_at.present? %>
              < %= working_times(day.started_at.floor_to(15.minute), day.finished_at.floor_to(15.minute) ) %>
              < % str_times = working_times(day.started_at.floor_to(15.minute), day.finished_at.floor_to(15.minute)) %>
              < % @total_working_times = @total_working_times.to_f + str_times.to_f %>
              < % end %>
          </td> -->
          <td><!-- A06更新 在社時間 -->
            <% if (day.started_edit_at.present? && day.finished_edit_at.present? && (@attendance.indicater_reply_month == "承認"))%>
              <%= str_times = overtime_worked_on(day.finished_edit_at, day.started_edit_at, day.tomorrow_edit) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
            <% end %>
          </td>
          <%#11.3.2add　備考%>
          <td><%= day.note %></td> 
          <!-- A06更新 残業　関連 終了予定時間-->
          <td><%= l(day.overtime, format: :hour_only) if day.overtime.present? %></td>
          <td><%= l(day.overtime, format: :minutes_only) if day.overtime.present? %></td>
          <% if day.overtime.present? %>
            <td><%= overtime_worked_on(day.overtime, @user.designated_work_end_time, day.overday_check) %></td>
          <% else %>
            <td></td>
          <% end %>
          <td><%= day.task_memo %></td><!--業務処理内容-->
<!--           　#終了予定時間　
          <%# if day.overwork_status == "承認" %>
            <td><%#= l(day.overtime, format: :hour_only) if day.overtime.present? %></td>
            <td><%#= l(day.overtime, format: :minutes_only) if day.overtime.present? %></td>　-->
            <!--時間外時間
            <%# if day.overtime.present? %>  
              <td><%#= overtime_worked_on(day.overtime, @user.designated_work_end_time, day.tomorrow_edit) %></td>
            <%# else %>
              <td></td>
            <%# end %>
            <td><%#= day.task_memo %></td>
          <%# else %>
            <%#<td></td> <td></td> %>
          <%# end %> -->
          <td>
            <% if (day.indicater_check_edit.present?) && (day.indicater_reply_edit == "申請中") %>
              <%= "#{day.indicater_check_edit}に勤怠変更#{day.indicater_reply_edit}" %>
              <%#= "勤怠変更#{day.indicater_reply_edit}" %><br>
            <% elsif day.indicater_reply_edit == "承認" %>
              <%= "勤怠変更申請が#{day.indicater_reply_edit}されました" %><br>
            <% elsif day.indicater_reply_edit == "否認" %>
              <%= "勤怠変更申請が#{day.indicater_reply_edit}されました" %><br>
            <% end %>
          <%#</td><td>%>
            <% if (day.overwork_sperior.present?) && (day.overwork_status == "申請中")%>
              <%= "#{User.find(day.overwork_sperior).name}に残業#{day.overwork_status}" %>
            <% elsif day.overwork_status == "承認" %>
              <%= "残業申請が#{day.overwork_status}されました" %>
            <% elsif day.overwork_status == "否認" %>
              <%= "残業申請が#{day.overwork_status}されました" %>
            <% end %>
        　</td>
        </tr>
            <%# <td></td><td></td> %>
        </tr> <%#10.5.2 td 1つ減らす%>
      <% end %>
    </tbody>

    <tfoot> <%#10.8,10.9.2%>
        <!--rowspan:縦結合、colspan：横結合-->
      <tr>
          <th colspan="3">累計日数</th>
          <th colspan="6">総合勤務時間</th>
          <th colspan="5">累計在社時間</th>
          <th colspan="2">所属長承認</th>
      </tr>
      <tr>
        <td colspan="3"><%= @attendances.count %>日</td>
        <td colspan="6"><%= format_basic_info(@user.basic_work_time).to_f * @worked_sum %></td>
        <td colspan="5"><%= format("%.2f", @total_working_times.to_f) %></td>
        <!-- A06 -->
        <td colspan="2">
        <%= form_with(model: @user, url: attendances_update_month_approval_user_path(@user), method: :patch, local: true ) do |f| %>
        <%#= "申請月" %>
        <%= f.hidden_field :indicater_reply_month, :value => "申請中" %>
        <%= f.hidden_field :month_approval, :value => @first_day %>

        <div class="form-group">
          <% if @attendance.indicater_reply_month == "承認" %>
            <%= f.label :indicater_check_month, "所属長承認　#{@attendance.indicater_check_month}から承認済み" %>
          <% elsif @attendance.indicater_reply_month == "否認" %>
            <%= f.label :indicater_check_month, "所属長否認　#{@attendance.indicater_check_month}から否認済み" %>
          <% elsif @attendance.indicater_reply_month == "申請中" %>
            <%= f.label :indicater_check_month, "所属長承認　#{@attendance.indicater_check_month}へ申請中"%>
          <% else %>
            <%= f.label :indicater_check_month, "所属長承認 未" %>
          <% end %>
          <%= f.collection_select(:indicater_check_month, @seniors, :name, :name, {prompt: "選択して下さい"}, {class: "form-control input-sm"}) %>
          </div>
          <div class="form-group">
            <%= f.submit '申請', class: "btn btn-primary" %>
          </div>
        <% end %>
        </td>
      </tr>
    </tfoot>
  </table>
</div>

