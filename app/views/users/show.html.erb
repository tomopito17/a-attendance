<% provide(:title, @user.name) %>

<!--A04上長で（自分かどうか）&未承認だったら申請のお知らせの表示・未承認のものがあれば文字は赤色-->
<% if current_user.superior? %>

<!-- 所属長承認リンクを押すとモーダルへ飛ぶ-->
<%= link_to "【所属長承認のお知らせ】", monthly_confirmation_form_user_attendances_path(@user), remote: true %>

<!-- 勤怠変更の承認リンクを押すとモーダルへ飛ぶ-->
<%= link_to "【勤怠変更のお知らせ】", "#", remote: true %>

<!-- 残業申請承認リンクを押すとモーダルへ飛ぶ-->
<%= link_to "【残業申請のお知らせ】",  overwork_confirmation_form_user_attendances_path(@user), remote: true %>

<!-- 上長承認の件数をカウント-->
<%= @monthly_confirmation_count %>
<% end %>

<%# <h1><%= @user.name >%, <%= @user.email >%</h1>--> %>
<div><%#10.2 で月日分を追加%>
    <table class="table table-bordered table-condensed user-table">
        <tr>
            <td>【<%= l(@first_day, format: :middle) %>】勤怠管理表</td> <%#10.4 update%>
            <td>指定勤務時間：<%= format_basic_info(@user.work_time) %></td>
            <td>基本時間：<%= format_basic_info(@user.basic_time) %></td>
            <td>月初日：<%= l(@first_day, format: :short) %></td><%#10.3update%>
        </tr>

        <tr>
            <td>所属：<%= @user.department.present? ? @user.department : "未所属" %></td>
            <td>名前：<%= @user.name %></td>
            <td>出勤日数：<%= @worked_sum %>日</td> <%#update10.7%>
            <td>月末日：<%= l(@last_day, format: :short) %></td> <%#10.3update%>
        </tr>
    </table>
</div>

<div class="btn-users-show"> <%#10.4%>
    <%= link_to "⇦ 前月へ", user_path(date: @first_day.prev_month), class: "btn btn-info" %>
    <%= link_to "1ヶ月の勤怠編集へ", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-success" %>
    <%= link_to "次月へ ⇨", user_path(date: @first_day.next_month), class: "btn btn-info" %>
</div>

<div>
    <table class="table table-bordered table-condensed table-hover" id="table-attendances">
        <thead>
            <tr><%#colspan="1" 縦結合%>
                <th rowspan="2" class="table-header" width="90">残業申請</th>
                <th rowspan="2">日付</th>
                <th rowspan="2">曜日</th>
                <th rowspan="2">勤怠登録</th>
                <th colspan="2">出社</th>
                <th colspan="2">退社</th>
                <th rowspan="2">在社時間</th>
                <th rowspan="2">備考</th>
            </tr>
            <tr>
                <th>時</th>
                <th>分</th>
                <th>時</th>
                <th>分</th>
            </tr>
        </thead>

        <tbody>
            <% @attendances.each do |day| %> <%#10.4 (@first_day..@last_day).each do%>
            <% 
              css_class = 
              case $days_of_the_week[day.worked_on.wday]
              when '土' then
                'text-primary'
              when '日' then
                'text-danger'
              end
            %>

            <tr>
                <!-- 残業申請ボタン押下　モーダルへ飛ぶ-->
                <td class="table-body">
                    <%= link_to "残業申請", overwork_form_user_attendance_path(@user, day), remote: true, :style=>"color:white;", class: "btn btn-sm btn-primary" %>
                </td>
                <td><%= l(day.worked_on, format: :short) %></td>
                <td class="<%= css_class %>"><%= $days_of_the_week[day.worked_on.wday] %></td>

                <td>
                    <!-- カレンダー　日にち-->
                    <% if btn_text = attendance_state(day) %>
                    <%= link_to "#{btn_text}登録", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
                    <% end %>
                </td>

                <td><%= format_hour(day.started_at) if day.started_at.present? %></td>
                <td><%= format_min(day.started_at) if day.started_at.present? %></td>
                <td><%= format_hour(day.finished_at) if day.finished_at.present? %></td>
                <td><%= format_min(day.finished_at) if day.finished_at.present? %></td>
                <td>
                    <% if day.started_at.present? && day.finished_at.present? %>
                    <%= working_times(day.started_at.floor_to(15.minute), day.finished_at.floor_to(15.minute) ) %>
                    <% str_times = working_times(day.started_at.floor_to(15.minute), day.finished_at.floor_to(15.minute)) %>
                    <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
                    <% end %>
                </td>
                <td><%= day.note %></td> <%#11.3.2add%>
            </tr> <%#10.5.2 td 1つ減らす%>
            <% end %>
        </tbody>

        <tfoot> <%#10.8,10.9.2%>
            <!--rowspan:縦結合、colspan：横結合-->
            <tr>
                <td colspan="2">累計日数</td>
                <td colspan="2">総合勤務時間</td>
                <td colspan="2">累計在社時間</td>
                <td rowspan="2"></td>
            </tr>
            <tr>
                <td colspan="2"><%= @attendances.count %></td>
                <td colspan="2"><%= format_basic_info(@user.work_time).to_f * @worked_sum %></td>
                <td colspan="2"><%= format("%.2f", @total_working_times.to_f) %></td> <%#<td colspan="2"></td>%>
            </tr>
        </tfoot>
    </table>
</div>
<!-- モーダル呼び出し 残業申請-->
<div id="overwork-request" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
<!-- モーダル呼び出し 残業申請の承認-->
<div id="overwork-confirmation" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
<!-- モーダル呼び出し 上長１ヶ月承認-->
<div id="monthly-confirmation" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>