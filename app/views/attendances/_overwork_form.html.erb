<div class="modal-dialog modal-lg modal-dialog-center">
    <div class="modal-content">
        <h1>残業申請</h1>

        <div class="overwork_form">
            <%= form_with(model: @attendance, url: update_overwork_user_attendance_path(@user, @attendance), local: true, method: :patch) do |f| %>
            <table class="table table-bordered table-striped table-condensed table-xl">
                <thead>
                    <tr>
                    <!--
                        <th width="10%">日付</th>
                        <th width="10%">曜日</th>
                        <th width="20%">終了予定時間</th>
                        <th width="10%">翌日</th>
                        <th width="30%">業務処理内容</th>
                        <th width="20%">指示者確認（印）</th>
                        -->
                        <th>日付</th>
                        <th>曜日</th>
                        <th>終了予定時間</th>
                        <th>翌日</th>
                        <th>業務処理内容</th>
                        <th>指示者確認（印）</th>
                    </tr>   
                </thead>

                <tbody>
                    <% css_class =
                      case $days_of_the_week[@attendance.worked_on.wday]
                        when '土'
                          'text-primary'
                        when '日'
                          'text-danger'
                        end
                    %>
                    <tr>
                        <!--日付-->
                        <td class="attendance_date">
                            <%= l(@attendance.worked_on,format: :short) %></td>
                        <td class="<%= css_class %>"><%= $days_of_the_week[@attendance.worked_on.wday] %></td>

                        <!--終了予定時間-->
                        <td><%= f.time_field :overtime %></td>

                        <!--翌日のチェックボックス-->
                        <td><%= f.check_box :overday_check %></td>
                        <!--業務処理内容 備考-->
                        <td><%= f.text_field :task_memo %></td>

                        <!--指示者確認（印)-->
                        <td><%= f.collection_select :overwork_sperior, @seniors, :id, :name, prompt: "選択してください" %></td>
                        <!-- ↑@Seniors nameカラム 　表記-->
                    </tr>
                </tbody>


            </table>
            <%= f.submit "変更を送信する", class: "btn btn-primary btn-block" %><br>
            <% end %>
        </div>

    </div>
</div>