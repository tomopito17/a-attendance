<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
   	<div class="overwork_confirmation_form">
      <h2>残業承認フォーム</h2>
			<%= form_with(model: @user, url: update_overwork_confirmation_form_user_attendances_path(@user), method: :patch, local: true) do |f| %>
				<% @attendances.each do |user_id, attendances| %>
					<h3 class="modal-title center"><%= "【#{User.find(user_id).name}からの残業申請】"%></h3>
          <table class="table table-bordered table-striped table-condensed table-xl">
						<thead>
							<th>日付</th>
							<th>曜日</th>
							<th>終了予定時間</th>
							<th>指定勤務終了時間</th>
							<th>時間外勤務時間</th>
							<th>業務処理内容</th>
							<th>指示者確認㊞</th>
							<th>変更</th>
							<th>勤怠を確認する</th>
						</thead>
						<% attendances.each do |day| %>
							<%= f.fields_for "attendances[]", day do |d| %>
                <tbody class="line">
                  <% css_class =
                    case $days_of_the_week[day.worked_on.wday]
                    when '土'
                        'text-primary'
                    when '日'
                        'text-danger'
                    end
                  %>
                  <!-- 日付 -->
                  <td><%= l(day.worked_on, format: :short) %></td>
                  <td class="<%= css_class %>"><%= $days_of_the_week[day.worked_on.wday] %></td>
                  <!-- 終了予定時間 -->
                  <td><%= day.overtime.try(:strftime,"%H：%M") %></td>
                  <!-- 指定勤務終了時間 -->
                  <td><%= l(User.find(user_id).designated_work_end_time, format: :time) %></td>
                  <!-- 時間外勤務時間 -->
                  <td><%= overtime_worked_on(day.overtime, User.find(user_id).designated_work_end_time, day.overday_check) %></td>
                  <!-- 業務処理内容 -->
                  <td><%= day.task_memo %></td>
                  <!-- 指示者確認 -->
                    <td><%= d.select :overwork_status, ['なし', '申請中', '承認', '否認'], {prompt: "選択して下さい"}, {class: "form-control input-sm", required: true} %></td>
                  <!-- 変更チェック -->
                  <td><%= d.check_box :change %></td>
                  <!-- 確認ボタンUI 「勤怠を確認する」-->
                  <td><%= link_to "確認", verification_user_path(user_id, worked_on: day.worked_on), class: "btn btn-primary", target: :_blank %></td>
                </tbody>
							<% end %>
						<% end %>
					</table>
				<% end %>
				<div class="center">
					<%= f.submit "変更を送信する", class: "btn btn-primary" %>
				</div>
			<% end %>
    </div>
	</div>
</div>